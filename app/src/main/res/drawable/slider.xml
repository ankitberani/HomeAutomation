<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Style for "oval_2" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item >
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="#ff393d55" android:centerColor="#ff2e3141" android:endColor="#ff0c0e14" android:angle="-90" />
            <item android:name="android:shadowColor">#66000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">5</item>
        </shape>
    </item>
        <item >
            <shape android:shape="rectangle">
                <corners android:radius="80dp" />
                <solid android:color="#ffffc642" />
            </shape>
        </item>


    <item >
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ff1b202d" />
            <corners android:radius="41dp" />
            <gradient android:type="linear" android:useLevel="true" android:startColor="#ff3b5376" android:endColor="#ff15171f" android:angle="-90" />
        </shape>
    </item>

</layer-list>