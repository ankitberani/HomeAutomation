<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:background="@drawable/darkback"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_close"
        android:tint="@color/white" />

    <EditText
        android:id="@+id/r_type"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext"
        android:hint="Remote Type e.g AC/TV"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="#45ffffff" />

    <EditText
        android:id="@+id/brandName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext"
        android:hint="Enter Brand Name"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="#45ffffff" />

    <EditText
        android:id="@+id/dia_model"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext"
        android:hint="Enter Model"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="#45ffffff" />

    <EditText
        android:id="@+id/dia_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext"
        android:hint="Enter Remote Name"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="#45ffffff" />


    <Button
        android:id="@+id/dia_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:text="ADD"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/dia_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:text="UPdate"
        android:textColor="@color/white"
        android:visibility="gone" />


</LinearLayout>