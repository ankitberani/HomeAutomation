<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="left"
        android:layout_marginLeft="05dp"
        android:layout_marginTop="05dp"
        android:layout_marginRight="05dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_scene_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:buttonTint="@color/white"
                    android:checked="false"
                    android:clickable="false"
                    android:enabled="true"
                    android:gravity="center"></RadioButton>

                <com.wekex.apps.homeautomation.utils.RoundRectCornerImageView
                    android:id="@+id/iv_circullar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left|center"
                    android:background="@drawable/rounded_corner"
                    app:cornerRadius="@dimen/margin_10"
                    app:roundedCorners="topLeft|topRight|bottomLeft|bottomRight">

                    <ImageView
                        android:id="@+id/iv_sceneicon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left|center"
                        android:scaleType="fitXY"
                        android:src="@drawable/read"></ImageView>
                </com.wekex.apps.homeautomation.utils.RoundRectCornerImageView>

                <TextView
                    android:id="@+id/tv_scnene_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="05dp"
                    android:text="Nightlight"
                    android:textColor="@color/white"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="05dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="02dp"
                    android:src="@drawable/edit_icon"></ImageView>

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="02dp"
                    android:src="@drawable/del_icon"></ImageView>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>