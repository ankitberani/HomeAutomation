<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".secondaryActivity.rgb_controls">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:popupTheme="@style/AlertDialog.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_10"
            android:gravity="right"
            android:onClick="power"
            android:src="@drawable/power_button_svg"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_05"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/margin_10"
            android:gravity="end"
            android:onClick="power"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_marginEnd="@dimen/margin_10" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:id="@+id/rgblayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/rbg_on_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/picker1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/red"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:padding="2dp"
                            android:text="R"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/green"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:padding="2dp"
                            android:text="G"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/blue"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:padding="2dp"
                            android:text="B"
                            android:textColor="@color/white" />
                    </LinearLayout>


                    <com.larswerkman.holocolorpicker.ColorPicker
                        android:id="@+id/picker11_new"
                        android:layout_width="250dp"
                        android:layout_height="300dp"
                        android:layout_centerInParent="true"
                        app:color_wheel_thickness="22dp" />


                    <ImageView
                        android:id="@+id/rbg_on_bulb"
                        android:layout_width="60dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="160dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/bulb_rbg_on"
                        android:tag="true"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/onoff_colorpicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="180dp"
                        android:text="ON"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:visibility="gone"
                        app:cardCornerRadius="5dp">
                        <!-- <RelativeLayout

                             android:background="@color/green"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"/>-->
                        <TextView
                            android:id="@+id/diy1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="bottom|center_horizontal"
                            android:tag="diy1"
                            android:text="@string/diy"
                            android:textColor="@color/black" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:id="@+id/diy2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/red"
                            android:gravity="bottom|center_horizontal"
                            android:tag="diy2"
                            android:text="@string/diy"
                            android:textColor="@color/black" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:id="@+id/diy3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blue"
                            android:gravity="bottom|center_horizontal"
                            android:tag="diy3"
                            android:text="@string/diy"
                            android:textColor="@color/black" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:id="@+id/diy4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/green"
                            android:gravity="bottom|center_horizontal"
                            android:tag="diy4"
                            android:text="@string/diy"
                            android:textColor="@color/black" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:id="@+id/diy5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/yellow"
                            android:gravity="bottom|center_horizontal"
                            android:tag="diy5"
                            android:text="@string/diy"
                            android:textColor="@color/black" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/picker1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:text="@string/color_temp" />

                    <com.wekex.apps.homeautomation.utils.GradienSeekBar
                        android:id="@+id/alphaSlider"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:max="255"
                        android:min="0" />

                    <TextView
                        android:id="@+id/brightnessTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:text="@string/brightness" />

                    <SeekBar
                        android:id="@+id/brightness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:max="255" />


                    <RelativeLayout
                        android:id="@+id/rl_image"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/margin_10">

                        <RelativeLayout
                            android:id="@+id/rl_main"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/ambilwarna_viewHue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/rgb_new_400" />

                            <ImageView
                                android:id="@+id/ambilwarna_cursor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/wheel" />

                        </RelativeLayout>

                        <SeekBar
                            android:id="@+id/seekbar_clr_picker"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/rgb_2"
                            android:max="100"
                            android:progress="10"
                            android:progressDrawable="@android:color/transparent" />


                        <LinearLayout
                            android:layout_width="400dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rl_main"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_r"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="R"
                                android:textColor="@color/red" />


                            <TextView
                                android:id="@+id/tv_g"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="G"
                                android:textColor="@color/green" />


                            <TextView
                                android:id="@+id/tv_b"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="B"
                                android:textColor="@color/yellow" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view_1"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="20dp"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <SeekBar
                        android:id="@+id/warmwhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:max="255"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:elevation="5dp"
                            android:onClick="white"
                            app:cardCornerRadius="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:gravity="center|center_horizontal"
                                android:text="@string/white"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:elevation="5dp"
                            android:focusable="true"
                            android:onClick="warmWhite"
                            app:cardCornerRadius="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:gravity="center|center_horizontal"
                                android:text="@string/warmwhite"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/smart_config_form_bg"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="Set"
                            android:visibility="gone" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rbg_off_layout"
                android:layout_width="match_parent"
                android:layout_height="345dp"
                android:orientation="vertical"
                android:visibility="invisible">

                <RelativeLayout
                    android:id="@+id/picker2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <RelativeLayout
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="190dp"
                            android:layout_height="190dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/circle_bulb" />

                        <ImageView
                            android:id="@+id/rbg_off_bulb"
                            android:layout_width="60dp"
                            android:layout_height="90dp"
                            android:layout_centerInParent="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/bulb_rbg_on"
                            android:tag="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="17dp"
                            android:layout_marginLeft="17dp"
                            android:layout_marginBottom="46dp"
                            android:paddingBottom="25dp"
                            android:text="OFF"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/picker1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pp"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp"
                        android:text="Press to turn on"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/whitelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">


            <TextView
                android:id="@+id/tv_bright_perc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:text="30%"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="40sp"
                android:textStyle="bold" />


            <com.triggertrap.seekarc.SeekArc
                android:id="@+id/seekArcWhite"
                android:layout_width="match_parent"
                android:layout_height="284dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:padding="50dp"
                app:arcColor="@color/colorPrimaryDark"
                app:arcWidth="30dp"
                app:clockwise="true"
                app:enabled="true"
                app:max="100"
                app:progress="30"
                app:progressColor="#FDBB21"
                app:progressWidth="30dp"
                app:rotation="180"
                app:roundEdges="true"
                app:startAngle="30"
                app:sweepAngle="300"
                app:thumb="@drawable/thumb_seekbar" />


            <SeekBar
                android:id="@+id/seekbar_ww"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/seekArcWhite"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rgb_2_reverse"
                android:max="70"
                android:progress="10"
                android:progressDrawable="@android:color/transparent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekbar_ww"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="05dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/warmwhite"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/cool_white"
                    android:textAllCaps="true"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_color_pallete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/iv_add_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10"
                android:src="@drawable/add"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Add New Color"
                android:textColor="@color/colorPrimary" />

            <com.wekex.apps.homeautomation.adapter.AutofitRecyclerView
                android:id="@+id/rv_color_boxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_scene_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_show_scene_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="05dp"
                    android:layout_marginTop="02dp"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginBottom="02dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner"
                    android:drawableLeft="@android:drawable/ic_menu_add"
                    android:drawablePadding="@dimen/margin_10"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="New Scene"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

            </LinearLayout>


            <com.wekex.apps.homeautomation.adapter.AutofitRecyclerView
                android:id="@+id/rv_scenelist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/rl_schedule_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_schedule_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dp_05"
                android:layout_weight="1" />

        </LinearLayout>

<!--        <Button-->
<!--            android:id="@+id/btn_add"-->
<!--            android:layout_width="@dimen/dp_150"-->
