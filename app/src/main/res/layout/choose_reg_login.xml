<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/s"
            android:layout_alignParentTop="true"
            android:src="@drawable/medium_res_icon" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/choose_reg_log"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">


    </LinearLayout>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="221dp"
        android:background="@drawable/reg_buttons"
        android:gravity="center"
        android:onClick="loginLayout"
        android:padding="10dp"
        android:text="SIGN IN"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="127dp"
        android:background="@drawable/ic_form_bg"
        android:gravity="center"
        android:onClick="signupLayout"
        android:padding="10dp"
        android:textAllCaps="true"
        android:text="Register"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>