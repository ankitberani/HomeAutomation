<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/darkback"
    android:orientation="vertical">
    <TextView
        android:text="Select Option to Continue :"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="10dp"
        android:id="@+id/na"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="5dp"
                android:background="@drawable/smart_config_form_bg"
                android:id="@+id/tv_remote"
                android:padding="10dp"
                android:textSize="20sp"
                android:text="TV Remote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ac_remote"
                android:layout_margin="5dp"
                android:background="@drawable/smart_config_form_bg"
                android:padding="10dp"
                android:textSize="20sp"
                android:text="AC Remote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>