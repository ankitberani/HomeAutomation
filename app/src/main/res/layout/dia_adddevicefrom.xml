<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/darkback">
    <TextView
        android:text="Select Option to Continue :"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="10dp"
        android:id="@+id/na"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_below="@+id/na"
            android:orientation="vertical"
            android:id="@+id/Dia_roomholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/fromExistingDevice"
                android:padding="10dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="Existing Device"
                android:background="@drawable/smart_config_form_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/fromSmartCOnfig"
                android:padding="10dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="Smart config"
                android:background="@drawable/smart_config_form_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!-- <include layout="@layout/card_rooms" />

         <include layout="@layout/card_rooms" />-->


</RelativeLayout>