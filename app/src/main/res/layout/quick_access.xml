    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/quick_access_bg"
        android:minWidth="150dp"
        android:onClick="addDeviceHome"
        android:padding="5dp">

        <ImageView
            android:id="@+id/qa_img0"
            android:layout_width="34dp"
            android:layout_height="26dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/qa_text0"
            style="@style/quick_access"
            android:layout_width="97dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="@string/addDevice"
            android:textAllCaps="true"
            android:textColor="#4da6ff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/quick_access_bg"
        android:minWidth="150dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/qa_img2"
            android:layout_width="34dp"
            android:layout_height="26dp"
            android:layout_margin="5dp"
            android:src="@drawable/washer_svg" />

        <TextView
            android:id="@+id/qa_text2"
            style="@style/quick_access"
            android:layout_width="97dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:onClick="schedules"
            android:text="SCHEDULES"
            android:textColor="#4da6ff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/quick_access_bg"
        android:minWidth="150dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/qa_img"
            android:layout_width="34dp"
            android:layout_height="26dp"
            android:layout_margin="5dp"
            android:src="@drawable/ip_camera_svg" />

        <TextView
            android:id="@+id/qa_text"
            style="@style/quick_access"
            android:layout_width="97dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="CAMERA"
            android:textColor="#4da6ff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/quick_access_bg"
        android:minWidth="150dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/qa_img3"
            android:layout_width="34dp"
            android:layout_height="26dp"
            android:layout_margin="5dp"
            android:src="@drawable/security_camera" />

        <TextView
            android:id="@+id/qa_text3"
            style="@style/quick_access"
            android:layout_width="97dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="SCENES"
            android:textColor="#4da6ff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/quick_access_bg"
        android:minWidth="150dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/qa_img4"
            android:layout_width="34dp"
            android:layout_height="26dp"
            android:layout_margin="5dp"
            android:src="@drawable/security_camera" />

        <TextView
            android:id="@+id/qa_text4"
            style="@style/quick_access"
            android:layout_width="97dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="RULES"
            android:textColor="#4da6ff"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>