<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="@dimen/margin_10"
        android:text="Add Type"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"></TextView>


    <TextView
        android:id="@+id/tv_chose_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type"
        android:gravity="center"
        android:padding="@dimen/dp_05"
        android:text="Choose Icon"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"></TextView>


    <ImageView
        android:id="@+id/tv_selected_image"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:layout_below="@+id/tv_chose_icon"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:gravity="center"
        android:src="@drawable/add"></ImageView>

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_selected_image"
        android:background="@color/colorAccent"></View>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_selected_image"
        android:layout_marginTop="@dimen/dp_05">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Device Name"
            android:textSize="14sp"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/red_"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>


    </LinearLayout>
</RelativeLayout>
