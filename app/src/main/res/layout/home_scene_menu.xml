<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" app:cardCornerRadius="5dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textColor="@color/colorPrimary" android:gravity="center" android:layout_gravity="center" android:id="@+id/editScene" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Edit Scene"/>
            <include layout="@layout/line"/>
            <TextView android:textColor="@color/colorPrimary" android:gravity="center" android:layout_gravity="center" android:id="@+id/remoscene" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Remove Scene"/>
            <include layout="@layout/line"/>
            <TextView android:textColor="@color/colorPrimary" android:gravity="center" android:layout_gravity="center" android:id="@+id/cancel" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Cancel"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
