<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="@dimen/switch_selector_padding" android:left="@dimen/switch_selector_padding" android:right="@dimen/switch_selector_padding" android:top="@dimen/switch_selector_padding">
                <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
                    <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />
                    <corners android:radius="@dimen/switch_radius" />
                    <size android:width="@dimen/switch_track_height" android:height="@dimen/switch_track_height" />
                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item android:bottom="@dimen/switch_selector_padding" android:left="@dimen/switch_selector_padding" android:right="@dimen/switch_selector_padding" android:top="@dimen/switch_selector_padding">
                <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
                    <gradient android:angle="270" android:endColor="@color/grey" android:startColor="@color/grey" />
                    <corners android:radius="@dimen/switch_radius" />
                    <size android:width="@dimen/switch_track_height" android:height="@dimen/switch_track_height" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>